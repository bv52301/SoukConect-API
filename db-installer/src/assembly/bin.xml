<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <files>
        <!-- Windows installer script -->
        <file>
            <source>${project.parent.basedir}/sql_files/install_sql_files.bat</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0755</fileMode>
        </file>
        <!-- Linux installer script -->
        <file>
            <source>${project.parent.basedir}/sql_files/install_sql_files.sh</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0755</fileMode>
        </file>
    </files>

    <fileSets>
        <!-- Include all SQL files under sql/ directory in the archive -->
        <fileSet>
            <directory>${project.parent.basedir}/sql_files</directory>
            <outputDirectory>/sql</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <!-- Optional: include a README if present -->
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
</assembly>

